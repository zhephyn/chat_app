<h1><%= @group.name %></h1>
<div id ="chat-interface">
    <h2>Messages</h2>
    <% @group.messages.each do |message| %>
        <div>
            <%= message.content %>
        </div>
    <% end %>
</div>

<%= form_with model: [@group, @message], url: group_messages_path(@group) do |form| %>
    <%= form.label :content %>
    <%= form.text_area :content %>
    <%= form.submit "Create Message" %>
<% end %>

<%= link_to "Edit Group", edit_group_path(@group), method: :get %>
<%= link_to "Destroy Group",group_path(@group), method: :delete %>
<%= link_to "Back to groups list",groups_path, method: :get %>